    # depends_on:
    #   - write-home-timeline-rabbitmq
---
apiVersion: v1
kind: Service
metadata:
  name: compose-post-service
  labels:
    death-star-project: social-network
    app: compose-post-service
  namespace: social-network
spec:
  ports:
  - port: 9090
  selector:
    death-star-project: social-network
    app: compose-post-service
---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: compose-post-service
  labels:
    death-star-project: social-network
    app: compose-post-service
  namespace: social-network
spec:
  replicas: 1
  selector:
    matchLabels:
      death-star-project: social-network
      app: compose-post-service
  template:
    metadata:
      labels: 
        death-star-project: social-network
        app: compose-post-service
      name: compose-post-service
    spec:
      containers:
      - name: compose-post-service
        resources:
          limits:
            cpu: "2"
            memory: "2Gi"
        # image: stvdputten/social-network-microservices:kubernetes
        image: poanpan/social-network-microservices-local-jaeger:v0.0.1
        imagePullPolicy: Always
        command: ["ComposePostService"]
        volumeMounts:
          - mountPath: /social-network-microservices/config/jaeger-config.yml
            subPath: jaeger-config.yml
            name: jaeger-conf-yaml
      restartPolicy: Always
      volumes:
        - name: jaeger-conf-yaml
          configMap:
            name: jaeger-config-yaml
